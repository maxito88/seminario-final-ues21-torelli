<div class="row row-cols-1 row-cols-md-3 g-4">
    <% for( let legajo of legajos ) { %>    
    
    <div class="col">
      <div class="card h-100">
        <% legajo.imagenDNI.forEach((img, i) => {  %>
        <img src="data:image/<%=img.contentType%>;base64,<%=img.data.toString('base64')%>" class="card-img-top" alt="...">
        <% }) %>
        <div class="card-body">
          <h5 class="card-title"> <%= legajo.nombre %> </h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        </div>
        <div class="card-footer">
            <% if (false) { %>
                <small class="btn btn-primary"> <%= legajo.email %> </small>
            <% } %>
            <small class="text-muted"> <%= legajo.email %> </small>
        </div>        
      </div>
    </div>

    <% } %>


  </div>